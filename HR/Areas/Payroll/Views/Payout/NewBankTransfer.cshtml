
@{
    ViewBag.Title = "NewBankTransfer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-header">
    <h2>
        Settle Employee
    </h2>

</div>
<div class="card-body card-padding" id="profile-main">
    <div class="row">
        <div class="col-sm-12">

            <!--      Wizard container        -->
            <div class="wizard-container">

                <div class="wizard-card m-t-20" data-color="orange" id="wizardProfile">
                    <form action="" method="post">
                        <!--        You can switch " data-color="orange" "  with one of the next bright colors: "blue", "green", "orange", "red", "azure"          -->
                        @*<div class="wizard-header text-center">
                                <h3 class="wizard-title">Create your profile</h3>
                                <p class="category">This information will let us know more about you.</p>
                            </div>*@

                        <div class="wizard-navigation">
                            <div class="progress-with-circle">
                                <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="3" style="width: 21%;"></div>
                            </div>
                            <ul>
                                <li>
                                    <a href="#Transfer-Type" data-toggle="tab">
                                        <div class="icon-circle">
                                            <i class="zmdi zmdi-arrow-right"></i>
                                        </div>

                                    </a>
                                    <span> Transfer Type</span>
                                </li>
                                <li>
                                    <a href="#Select-Employees" data-toggle="tab">
                                        <div class="icon-circle">
                                            <i class="zmdi  zmdi-arrow-right"></i>
                                        </div>

                                    </a>
                                    <span> Select Employees </span>
                                </li>
                                <li>
                                    <a href="#Options" data-toggle="tab">
                                        <div class="icon-circle">
                                            <i class="zmdi  zmdi-arrow-right"></i>
                                        </div>

                                    </a>
                                    <span>Options</span>
                                </li>


                            </ul>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane  m-t-20" id="Transfer-Type">

                                <h5 class="f-500 c-black p-15 f-14">Transfer Type</h5>
                                <div class="card">
                                    <div class="card-body card-padding">
                                        <div class="row m-b-10 m-t-10">
                                            <div class="col-xs-12 ">
                                                <label class="radio radio-inline m-r-20">
                                                    <input type="radio" name="sEmployee" value="Employee1">
                                                    <i class="input-helper"></i>
                                                    By Employer Bank : Employees can have accounts in different banks in this transfer

                                                </label>
                                            </div>
                                        </div>
                                        <div class="row m-b-10 m-t-10">
                                            <div class="col-xs-12 ">
                                                <label class="radio radio-inline m-r-20">
                                                    <input type="radio" name="sEmployee" value="Employee2">
                                                    <i class="input-helper"></i>
                                                    By Employee Bank : All employees to have account in same bank
                                                </label>
                                            </div>
                                        </div>
                                        <div class="row m-t-25">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        Bank Template

                                                    </label>
                                                    <select class="selectpicker" data-live-search="true">

                                                        <option>City Bank</option>


                                                    </select>
                                                </div>

                                            </div>

                                        </div>



                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane  m-t-20" id="Select-Employees">
                                <h5 class="f-500 c-black p-15 f-14"> Select Employees</h5>
                                <div class="card">
                                    <div class="card-body card-padding">
                                        <div class="card">
                                            <div class="card-body card-padding">
                                                <div class="row">
                                                    <div class="col-xs-12 col-md-4">
                                                        <dl class="dl-horizontal">
                                                            <dt>Total Employees</dt>
                                                            <dd>0</dd>
                                                        </dl>
                                                    </div>
                                                    <div class="col-xs-12 col-md-4">
                                                        <dl class="dl-horizontal">
                                                            <dt>Total Amount</dt>
                                                            <dd>0</dd>
                                                        </dl>
                                                    </div>
                                                    <div class="col-xs-12 col-md-4">
                                                        <dl class="dl-horizontal">
                                                            <dt>Total Employees With Errors</dt>
                                                            <dd>0</dd>
                                                        </dl>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        Employee Filter
                                                    </label>
                                                    <select class="selectpicker" data-live-search="true">
                                                        <option>All Employees</option>
                                                        <option>All Current Employees</option>
                                                        <option>All Past Employees</option>

                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-md-6 text-right">
                                                <div class="btn-group">
                                                    <button class="btn btn-default waves-effect" type="button">All</button>
                                                    <button class="btn btn-default waves-effect" type="button">Error</button>
                                                    
                                                </div>
                                            </div>
                                            </div>
                                            <div class="table-responsive">
                                                <table class="table table-striped expense-table">
                                                    <thead>
                                                        <tr>
                                                            <th>
                                                                 Name
                                                            </th>
                                                            <th>Employee No</th>
                                                            <th>Bank</th>
                                                            <th>Branch</th>
                                                            <th>IFSC Code</th>
                                                            <th> Amount No</th>
                                                            <th>Amount</th>
                                                            <th>Delete</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>Vinathi</td>
                                                            <td>010#</td>
                                                            <td>Citi Bank</td>
                                                            <td>Hitech</td>
                                                            <td>001002</td>
                                                            <td>12000120</td>
                                                            <td>10,000/-</td>
                                                            <td><button class="btn btn-danger waves-effect btn-xs" data-ma-action="profile-edit">
    <i class="zmdi zmdi-delete"></i>
    Delete
</button></td>
                                                        </tr>

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                         
                            <div class="tab-pane  m-t-20" id="Options">
                                <h5 class="f-500 c-black p-15 f-14">Options</h5>
                                <div class="card">
                                    <div class="card-body card-padding">
                                    
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        Value Date
                                                    </label>
                                                    <div class="input-group form-group">
                                                        <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i></span>
                                                        <div class="dtp-container">
                                                            <input type='text' class="form-control date-picker"
                                                                   placeholder="Click here...">
                                                        </div>
                                                    </div>   </div>
                                            </div>
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        Narration
                                                    </label>
                                                    <input class="form-control input-mask"  autocomplete="off" type="text" disabled>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        Debit Account Number
                                                    </label>
                                                    <input class="form-control input-mask" autocomplete="off" type="text">
                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        File Extension
                                                    </label>
                                                    <input class="form-control input-mask" autocomplete="off" type="text">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        File name start

                                                    </label>
                                                    <input class="form-control input-mask"  autocomplete="off" type="text">
                                                </div>
                                            </div>
                                            </div>
                                        </div>
                                </div>

                            </div>

                        </div>

                        <div class="wizard-footer">
                            <div class="pull-right">
                                <input type='button' class='btns bgm-lightblue btn-sm waves-effect btn-next btn-wd' name='next' value='Next' />
                                <input type='button' class='btns bgm-green btn-sm waves-effect btn-finish  btn-wd' name='finish' value='Finish' onclick="window.location.href='@Url.Action("EmployeeDirectory","Main",new { area ="Employee"},null)'" />
                            </div>

                            <div class="pull-left">
                                <input type='button' class='btns bgm-lightblue btn-sm waves-effect btn-previous btn-wd' name='previous' value='Previous' />
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div> <!-- wizard container -->

        </div>
    </div>
</div>


