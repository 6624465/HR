
@{
    ViewBag.Title = "PayArrears";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="card-header">
    <h2>
        Pay Arrears
    </h2>

</div>
<div class="card-body card-padding" id="profile-main">
    <div class="row">
        <div class="col-sm-12">

            <!--      Wizard container        -->
            <div class="wizard-container">

                <div class="wizard-card m-t-20" data-color="orange" id="wizardProfile">
                    <form action="" method="post">
                        <!--        You can switch " data-color="orange" "  with one of the next bright colors: "blue", "green", "orange", "red", "azure"          -->
                        @*<div class="wizard-header text-center">
                                <h3 class="wizard-title">Create your profile</h3>
                                <p class="category">This information will let us know more about you.</p>
                            </div>*@

                        <div class="wizard-navigation">
                            <div class="progress-with-circle">
                                <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="3" style="width: 21%;"></div>
                            </div>
                            <ul>
                                <li>
                                    <a href="#Arrear-Effective" data-toggle="tab">
                                        <div class="icon-circle">
                                            <i class="zmdi zmdi-arrow-right"></i>
                                        </div>

                                    </a>
                                    <span> Arrear Effective From</span>
                                </li>
                                <li>
                                    <a href="#Employees" data-toggle="tab">
                                        <div class="icon-circle">
                                            <i class="zmdi  zmdi-arrow-right"></i>
                                        </div>

                                    </a>
                                    <span> Employees </span>
                                </li>
                                <li>
                                    <a href="#Process-View" data-toggle="tab">
                                        <div class="icon-circle">
                                            <i class="zmdi  zmdi-arrow-right"></i>
                                        </div>

                                    </a>
                                    <span>Process and View</span>
                                </li>

                            </ul>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane  m-t-20" id="Arrear-Effective">

                                <h5 class="f-500 c-black p-15 f-14"> Arrear Effective From</h5>
                                <div class="card">
                                    <div class="card-body card-padding">
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <dl class="dl-horizontal text-left">
                                                    <dt style="text-align:left !important;">
                                                        Payroll Month
                                                    </dt>

                                                    <dd>

                                                        Jan 2017


                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>Arrear Effective From</label>
                                                    <input class="form-control input-mask" value="100" autocomplete="off" type="text" >
                                                </div>
                                            </div>

                             
                                        </div>
                                       
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        Remarks

                                                    </label>
                                                    <textarea class="form-control"></textarea>
                                                </div>
                                            </div>
                                          

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane  m-t-20" id="Employees">
                                <h5 class="f-500 c-black p-15 f-14"> Employee Position </h5>
                                <div class="card">
                                    <div class="card-body card-padding">
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        Designation

                                                    </label>
                                                    <select class="selectpicker" data-live-search="true">
                                                        <option>Accounts Executive</option>
                                                        <option>Business Development Executive</option>
                                                        <option>Business Development Manager</option>

                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        Department

                                                    </label>
                                                    <select class="selectpicker" data-live-search="true">
                                                        <option>Development</option>
                                                        <option>Facilities</option>
                                                        <option>Finance</option>

                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        Grade

                                                    </label>
                                                    <select class="selectpicker" data-live-search="true">
                                                        <option>G1</option>
                                                        <option>G2</option>
                                                        <option>G3</option>

                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        Location

                                                    </label>
                                                    <select class="selectpicker" data-live-search="true">
                                                        <option>Bangalore</option>
                                                        <option>Bellary</option>
                                                        <option>Bidar</option>

                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        Attendance Scheme

                                                    </label>
                                                    <select class="selectpicker" data-live-search="true">
                                                        <option>General scheme</option>


                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="tab-pane  m-t-20" id="Process-View">
                                <h5 class="f-500 c-black p-15 f-14">PF & ESI </h5>
                                <div class="card">
                                    <div class="card-body card-padding">
                                        <div class="row">
                                            <div class="col-sm-12">

                                                <div class="col-xs-12 col-md-6">
                                                    <div class="form-group fg-line">
                                                        <label>PAN Number</label>
                                                        <input class="form-control input-mask" autocomplete="off" type="text">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-6">
                                                <div class="checkbox m-b-15">
                                                    <label>
                                                        <input type="checkbox" value="" id="chk1">
                                                        <i class="input-helper"></i>
                                                        Include PF

                                                    </label>
                                                </div>


                                                <div id="sb1" style="display:none;">
                                                    <div class="card">
                                                        <div class="card-body card-padding">
                                                            <div class="form-group fg-line">
                                                                <div class="fg-line">
                                                                    <label>PF Number</label>
                                                                    <input class="form-control input-mask" autocomplete="off" type="text">
                                                                </div>
                                                                <small>Format : (Region Code/Office Code/Est Code/Extn No/Member Acc No) Example HR/FBD/0003256/000/0000125.</small>

                                                            </div>
                                                            <div class="form-group fg-line">
                                                                <label>  UAN Number</label>
                                                                <input class="form-control input-mask" autocomplete="off" type="text">
                                                            </div>

                                                            <label>
                                                                PF Excess Contribution

                                                            </label><br /><br />


                                                            <label class="radio radio-inline m-r-20">
                                                                <input type="radio" name="PF-Excess" value="Employee-max">
                                                                <i class="input-helper"></i>
                                                                Employee & Employer contribution - 12% with in wage ceiling (Max Rs.1800)
                                                            </label>
                                                            <br /><br />
                                                            <label class="radio radio-inline m-r-20">
                                                                <input type="radio" name="PF-Excess" value="Employee-excess">
                                                                <i class="input-helper"></i>
                                                                Employee contribution - 12% over and above wage ceiling (In excess to Rs.1800)
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="checkbox m-b-15">
                                                    <label>
                                                        <input type="checkbox" value="" id="chk2">
                                                        <i class="input-helper"></i>
                                                        Include PF

                                                    </label>
                                                </div>
                                                <div id="sb2" style="display:none;">
                                                    <div class="card">
                                                        <div class="card-body card-padding">
                                                            <div class="form-group fg-line">
                                                                <label>  ESI Number</label>
                                                                <input class="form-control input-mask" autocomplete="off" type="text">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                            <div class="tab-pane  m-t-20" id="payment-mode">
                                <h5 class="f-500 c-black p-15 f-14">PF & ESI </h5>
                                <div class="card">
                                    <div class="card-body card-padding">
                                        <div class="row">
                                            <div class="col-sm-12  col-md-6">

                                                <div class="form-group fg-line">
                                                    <label>
                                                        Payment Type
                                                    </label>
                                                    <select class="selectpicker" data-live-search="true">
                                                        <option>Cash</option>
                                                        <option>Bank Transfer</option>
                                                        <option>Cheque</option>
                                                        <option>
                                                            Demand Draft
                                                        </option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="wizard-footer">
                            <div class="pull-right">
                                <input type='button' class='btns bgm-lightblue btn-sm waves-effect btn-next btn-wd' name='next' value='Next' />
                                <input type='button' class='btns bgm-green btn-sm waves-effect btn-finish  btn-wd' name='finish' value='Finish' onclick="window.location.href='@Url.Action("EmployeeDirectory","Main",new { area ="Employee"},null)'" />
                            </div>

                            <div class="pull-left">
                                <input type='button' class='btns bgm-lightblue btn-sm waves-effect btn-previous btn-wd' name='previous' value='Previous' />
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div> <!-- wizard container -->

        </div>
    </div>
</div>
